@model FlatUi.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<h2 class="text-center">Welcome to Flat UI with ASP.NET MVC</h2>
<section id="loginForm">
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))   {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Log in Form</legend>
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control login-field", @placeholder= "Please enter any username" })
                
                <label class="login-field-icon fui-user" for="login-name"></label>
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control login-field", @placeholder = "Please enter any password" })
                
                <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>
        <input type="submit" value="Log in" class="btn btn-block btn-lg btn-primary" />
        @Html.ValidationSummary(false)
        <a class="login-link" href="#">Lost your password?</a>
    </fieldset>
}
</section>
<div class="text-center">
Note : You can login using ANY username and password.
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/flatUiJsBundle")
}
